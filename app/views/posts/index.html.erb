<div class="row">
<% @posts.each do |post| %>
    <div class="col-xs-12 col-md-6 col-xl-4 my-3">
        <div class="card">
            <div class="card-body card-height">
                <h4><%= link_to post.title, post_path(post) %></h4>
                <p><%= post.body %></p>
            </div>
        </div>
    </div>
<% end %>
</div>