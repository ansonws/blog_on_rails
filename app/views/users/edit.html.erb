<div class="form-padding">
    <h2 class="mt-2">Edit Account Details</h2>
    <%= form_with model: @user, local: true do |f| %>
        <div class="form-group mt-3">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
        </div>
        <%= f.submit class: "btn btn-outline-primary mr-2" %>
        <%= link_to 'Change Password', password_path(current_user), class: "btn btn-outline-primary mr-2" %>
        <%= link_to 'Cancel', user_path(current_user), class: "btn btn-outline-danger" %>
    <% end %>
</div>